<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nyelam.android.booking.BookingServiceActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorGradationLeft"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorWhite"
                    android:background="@android:color/transparent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="@string/booking_details"/>

                <!--<ImageView
                    android:id="@+id/menu_item_imageView"
                    android:src="@drawable/ic_action_menu_item"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />-->
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:visibility="gone"
            android:padding="@dimen/padding"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/book_layout"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGradationLeft"
                    android:gravity="center"
                    android:background="@drawable/ny_circle_white"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:text="Pesan"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_toRightOf="@+id/book_layout"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <View
                    android:background="#89f5f5f5"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_width="16dp"
                    android:layout_height="1dp" />
                <TextView
                    android:text="2"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorGradationLeft"
                    android:gravity="center"
                    android:background="@drawable/ny_circle_blue_transparant"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
                <TextView
                    android:text="Bayar"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#89f5f5f5"
                    android:gravity="center"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>



    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_triple"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/refresh_swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/main_linearLayout"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/order_id_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1286ec"
                    android:gravity="center"
                    android:padding="@dimen/padding"
                    android:text="#1828281"
                    android:textColor="@color/colorWhite" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/ny_grey3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding"
                        android:text="Your Order"
                        android:textColor="@color/ny_black1"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/status_textView"
                        android:padding="@dimen/padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="14sp"
                        android:textColor="#ea2614"
                        android:textAllCaps="true"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/padding">

                    <TextView
                        android:id="@+id/schedule_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sel, 01 Jan 1990"
                        android:textColor="@color/ny_black1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/service_name_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="@dimen/padding"
                        android:text="@string/service_name"
                        android:textColor="@color/ny_black1" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/location_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:text="@string/location"
                        android:textSize="14sp"
                        android:textColor="@color/ny_grey4" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding"
                            android:text="@string/sub_total"
                            android:textSize="14sp"
                            android:textColor="@color/ny_grey4" />
                        <TextView
                            android:id="@+id/sub_total_price_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginLeft="@dimen/padding"
                            android:textSize="14sp"
                            android:text="Rp 0"
                            android:textColor="@color/ny_orange" />
                    </LinearLayout>


                    <LinearLayout
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="@dimen/padding"
                            android:text="@string/voucher"
                            android:textColor="@color/ny_grey4" />
                        <TextView
                            android:id="@+id/voucher_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginLeft="@dimen/padding"
                            android:textSize="14sp"
                            android:text="Rp 0"
                            android:textColor="@color/ny_orange" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_marginTop="@dimen/padding"
                            android:text="@string/total_price"
                            android:textColor="@color/ny_grey4" />
                        <TextView
                            android:id="@+id/total_price_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/padding"
                            android:layout_marginLeft="@dimen/padding"
                            android:textSize="14sp"
                            android:text="Rp 0"
                            android:textColor="@color/ny_orange" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ny_grey3"
                    android:padding="@dimen/padding"
                    android:text="@string/contact_details"
                    android:textColor="@color/ny_black1"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="@dimen/padding">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/contact_name_textView"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/full_name"
                            android:textColor="@color/ny_black1"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/phone_number"
                            android:textColor="@color/ny_grey4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/contact_phone_number_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/ny_black1"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/email"
                            android:textColor="@color/ny_grey4"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/contact_email_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/ny_black1"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ny_grey3"
                    android:padding="@dimen/padding"
                    android:text="@string/participants_detail"
                    android:textColor="@color/ny_black1"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/participant_container_linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding"/>




                <LinearLayout
                    android:id="@+id/payment_linearLayout"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ny_grey3"
                        android:padding="@dimen/padding"
                        android:text="@string/payment"
                        android:textColor="@color/ny_black1"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:background="@color/colorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="@string/transfer_to"
                            android:textSize="18sp"
                            android:textColor="@color/ny_black1"
                            android:gravity="center"
                            android:padding="@dimen/padding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />




                        <TableLayout
                            android:id="@+id/tabla_cuerpo"
                            android:paddingLeft="@dimen/padding_double"
                            android:paddingRight="@dimen/padding_double"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TableRow
                                android:id="@+id/tableRow3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <!--<TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="Cabang"
                                    android:textAppearance="?android:attr/textAppearanceMedium"/>-->

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:textSize="16sp"
                                    android:text="@string/bank_branch"
                                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                            </TableRow>

                            <TableRow
                                android:id="@+id/tableRow4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/textView1"
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="@string/account_number_label"
                                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="@string/account_number"
                                    android:textAppearance="?android:attr/textAppearanceMedium"/>

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_weight="1"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="@string/account_name_label"
                                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                                <TextView
                                    android:layout_weight="2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:textSize="14sp"
                                    android:text="@string/account_name"
                                    android:textAppearance="?android:attr/textAppearanceMedium"></TextView>

                            </TableRow>
                        </TableLayout>



                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="@drawable/ny_rectangle_white_border_black"
                            android:padding="@dimen/padding"
                            android:layout_margin="@dimen/padding_double"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/choose_file_textView"
                                android:text="@string/choose_file"
                                android:textColor="@color/ny_black1"
                                android:paddingLeft="@dimen/padding_double"
                                android:paddingRight="@dimen/padding_double"
                                android:background="@drawable/ny_rectangle_white_border_black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/transfer_evidence_textView"
                                android:text=""
                                android:textColor="@color/ny_black1"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:background="@drawable/ny_rectangle_white"
                                android:layout_marginLeft="@dimen/padding"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/confirm_linearLayout"
                            android:background="@drawable/ny_rectangle_blue"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingLeft="80dp"
                            android:paddingRight="80dp"
                            android:layout_marginTop="@dimen/padding_double"
                            android:layout_marginBottom="@dimen/padding_double"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="@string/confirm"
                                android:textSize="14sp"
                                android:textAllCaps="true"
                                android:textStyle="bold"
                                android:textColor="@color/colorWhite"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:padding="@dimen/padding_half"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>





            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>

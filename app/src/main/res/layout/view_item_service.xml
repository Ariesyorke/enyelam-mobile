<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/image_relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/service_imageView"
                android:src="@drawable/bg_placeholder"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="120dp" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/icon_imageView"
                android:src="@drawable/ic_pin_map_white"
                android:layout_margin="@dimen/padding"
                android:layout_width="18dp"
                android:layout_height="18dp" />
            <com.nyelam.android.view.font.NYTextView
                android:visibility="gone"
                app:fontTextStyle="reguler"
                android:id="@+id/location_textView"
                android:layout_toRightOf="@+id/icon_imageView"
                android:text="@string/location"
                android:textSize="14sp"
                android:textColor="@color/colorWhite"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.nyelam.android.view.font.NYTextView
                app:fontTextStyle="mediumItalic"
                android:id="@+id/service_name_textView"
                android:text="Service Name"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:singleLine="true"
                android:maxLines="1"
                android:padding="@dimen/padding"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/ny_dark_transparent_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total_dive_textView"
                    android:text="0 Dive"
                    android:textSize="14dp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=" | "
                    android:textSize="14dp"
                    android:textColor="@color/ny_black1"
                    android:layout_margin="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/total_dive_spot_textView"
                    android:text="0 Spot"
                    android:textSize="14dp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=" | "
                    android:textSize="14dp"
                    android:textColor="@color/ny_black1"
                    android:layout_margin="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/total_day_textView"
                    android:text="0 Day"
                    android:textSize="14dp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/StarRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingTop="@dimen/padding_half"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="0"
                    android:stepSize="1.0"
                    android:layout_gravity="start" />
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/rating_textView"
                    app:fontTextStyle="reguler"
                    android:text="5.0"
                    android:textSize="14sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.nyelam.android.view.font.NYTextView
                    app:fontTextStyle="reguler"
                    android:text=" | "
                    android:textSize="14sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/visited_textView"
                    app:fontTextStyle="reguler"
                    android:text="0 Visited"
                    android:textSize="14sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <com.nyelam.android.view.font.NYTextView
                app:fontTextStyle="reguler"
                android:text="Start From"
                android:textSize="14sp"
                android:textColor="@color/ny_black1"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.nyelam.android.view.font.NYStrikethroughTextView
                android:visibility="gone"
                app:fontTextStyle="reguler"
                android:id="@+id/price_strikethrough_textView"
                android:text="Rp -"
                android:textSize="14sp"
                android:textColor="@color/ny_black1"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_marginTop="@dimen/padding_half"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    app:fontTextStyle="bold"
                    android:id="@+id/price_textView"
                    android:text="Rp -"
                    android:textSize="18sp"
                    android:textColor="@color/ny_orange"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.nyelam.android.view.font.NYTextView
                    app:fontTextStyle="reguler"
                    android:layout_toRightOf="@+id/price_textView"
                    android:text=" / pax"
                    android:textSize="12sp"
                    android:textColor="@color/ny_black1"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/license_imageView"
                    android:src="@drawable/ic_license"
                    android:layout_alignParentRight="true"
                    android:layout_width="42dp"
                    android:layout_height="28dp" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>






    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:padding="@dimen/padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:visibility="gone"
                android:id="@+id/dive_center_name_textView"
                android:layout_below="@+id/service_name_textView"
                android:text="Dive Center"
                android:textSize="15sp"
                android:textColor="@color/ny_grey4"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
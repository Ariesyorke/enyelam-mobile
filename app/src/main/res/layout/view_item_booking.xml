<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="4dp"
    app:cardCornerRadius="3dp"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:padding="@dimen/padding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/service_imageView"
                android:src="@drawable/logo_nyelam"
                android:scaleType="centerCrop"
                android:layout_width="100dp"
                android:minHeight="100dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:padding="@dimen/padding"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/service_name_textView"
                    android:text="Service Name"
                    android:textSize="18sp"
                    android:textColor="@color/ny_black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/location_textView"
                    android:layout_below="@+id/service_name_textView"
                    android:text="Location"
                    android:textSize="15sp"
                    android:textColor="@color/ny_grey4"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/ic_arrow"
                android:layout_gravity="center"
                android:layout_width="14dp"
                android:layout_height="14dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/padding"
            android:background="@color/ny_grey1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginTop="@dimen/padding_half"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ic_calendar"
                android:src="@drawable/ic_calendar"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date_textView"
                android:layout_toRightOf="@+id/ic_calendar"
                android:text="November 30, 2017"
                android:textSize="13sp"
                android:textColor="@color/ny_black1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_half"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/ic_money"
                android:layout_toLeftOf="@+id/price_textView"
                android:src="@drawable/ic_money"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/price_textView"
                android:text="Rp. 123.456"
                android:textSize="13sp"
                android:textColor="@color/ny_black1"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_half"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/padding"
            android:background="@color/gray.primary_dark"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>


</android.support.v7.widget.CardView>
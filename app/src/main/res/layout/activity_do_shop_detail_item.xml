<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".doshop.DoShopDetailItemActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_image_item"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/example_pic" />

            <ImageView
                android:layout_width="@dimen/padding_triple"
                android:layout_height="@dimen/padding_triple"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_search_zoom"
                android:tint="@color/ny_grey3" />
        </RelativeLayout>


        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_gravity="center"
            android:layout_margin="@dimen/padding_quad"
            android:layout_width="55dp"
            android:layout_height="55dp" />

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_main_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/padding">

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Cressi Gloves 5 mm Ultrastrecht"
                android:textColor="@color/ny_black2"
                android:textSize="@dimen/eightteen_sp"
                app:fontTextStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_half"
                android:orientation="horizontal">
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/StarRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1.0"
                    android:layout_gravity="start" />
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_review_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text="(19)"/>
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_underline_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text="Reviews"/>
                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text="|"/>
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_write_review"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text="Write a Review"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:orientation="horizontal">
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:textColor="@color/ny_black2"
                    android:textSize="@dimen/jumbo_text"
                    tools:text="Rp 257098"
                    app:fontTextStyle="bold"/>
                <LinearLayout
                    android:id="@+id/ll_price_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.nyelam.android.view.font.NYTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/tertiary_text_size"
                            android:textColor="@color/ny_black2"
                            android:text="RRP : "
                            />
                        <com.nyelam.android.view.font.NYStrikethroughTextView
                            android:id="@+id/tv_price_strikethrough"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/padding"
                            tools:text="Rp 318585"
                            android:textColor="@color/ny_black2"
                            android:textSize="@dimen/tertiary_text_size"
                            android:visibility="visible" />
                    </LinearLayout>
                    <com.nyelam.android.view.font.NYTextView
                        android:id="@+id/tv_you_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/tertiary_text_size"
                        android:textColor="@color/ny_black2"
                        tools:text="You Save : 19.3 %"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_half"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_forbidden"
                    android:layout_marginRight="@dimen/padding_half"/>
                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text="Buy this product and earn "/>
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_coinns"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text="15 CoINNs / 2514 Rp"
                    app:fontTextStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding">
                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_half"
                    android:layout_weight="1"
                    android:textColor="@color/ny_black2"
                    android:layout_gravity="left"
                    android:textSize="@dimen/tertiary_text_size"
                    android:text="Size"/>
                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_half"
                    android:textColor="@color/ny_black2"
                    android:textSize="@dimen/tertiary_text_size"
                    android:text="Size chart"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_item_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginRight="@dimen/padding_half"
                    android:background="@drawable/ny_rectangle_white_border_grey_two_no_transparant">

                    <com.nyelam.android.view.NYSpinner
                        android:id="@+id/spinner_item_size"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:popupBackground="@android:color/transparent"
                        android:background="@android:color/transparent"/>
                    <!--android:entries="@array/item_size"-->

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/padding">
                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_half"
                    android:layout_weight="1"
                    android:textColor="@color/ny_black2"
                    android:layout_gravity="left"
                    android:textSize="@dimen/tertiary_text_size"
                    android:text="Quantity"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginRight="@dimen/padding_half"
                    android:background="@drawable/ny_rectangle_white_border_grey_two_no_transparant">

                    <EditText
                        android:visibility="gone"
                        android:id="@+id/et_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="@dimen/padding_half"
                        android:layout_marginRight="@dimen/padding_half"
                        android:inputType="numberDecimal"
                        android:popupBackground="@android:color/transparent"
                        android:background="@android:color/transparent"/>


                    <com.nyelam.android.view.NYSpinner
                        android:id="@+id/spinner_quantity"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:popupBackground="@android:color/transparent"
                        android:background="@android:color/transparent"/>
                    <!--android:entries="@array/item_size"-->

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/arrow"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"/>


                </RelativeLayout>
            </LinearLayout>

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_half"
                android:textAllCaps="true"
                android:textColor="@color/ny_green3"
                android:textSize="@dimen/secondary_text_size"
                android:layout_marginTop="@dimen/padding"
                android:text="In Stock"
                app:fontTextStyle="bold"/>

            <TextView
                android:id="@+id/tv_add_to_basket"
                android:text="@string/add_to_basket"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/secondary_text_size"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:background="@drawable/ny_rectangle_orange"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginLeft="@dimen/padding_half"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginBottom="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/tertiary_text_size"
                android:textColor="@color/ny_black2"
                android:text="Order now and it will be delivered directly to you between"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_sent_date_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    app:fontTextStyle="bold"
                    android:text="Wed. 1 Aug."/>
                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    android:text=" and "/>
                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_sent_date_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/tertiary_text_size"
                    android:textColor="@color/ny_black2"
                    app:fontTextStyle="bold"
                    android:text="Thu. 2 Aug."/>
            </LinearLayout>

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_product_description_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:gravity="center"
                tools:text="Product Description Cressi Gloves 5 mm Ultrastrecht"
                android:textColor="@color/ny_black2"
                android:textSize="@dimen/eightteen_sp"
                app:fontTextStyle="bold"/>

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding"
                android:layout_marginBottom="@dimen/padding_double"
                tools:text="At Scubastore, we show all the characteristics of the cressi Gloves 5 mm Ultrastrecht. Secure payment and guaranteed shipment! in addition, discover more similiar producs of cress "
                android:textColor="@color/ny_black2"
                android:textSize="@dimen/tertiary_text_size"/>

            <LinearLayout
                android:visibility="visible"
                android:id="@+id/ll_related_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:text="Recommended for you"
                    android:textColor="@color/ny_black2"
                    android:textSize="@dimen/eightteen_sp"
                    app:fontTextStyle="bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_half">
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="See all products"
                        android:textColor="@color/ny_black2"
                        android:textSize="@dimen/tertiary_text_size"/>
                    <ImageView
                        android:layout_width="@dimen/padding"
                        android:layout_height="@dimen/padding"
                        android:layout_marginLeft="@dimen/padding_half"
                        android:src="@drawable/ic_arrow_right_grey"/>
                </LinearLayout>


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_related_item"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
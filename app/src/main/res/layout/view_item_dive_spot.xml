<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="4dp"
    app:cardCornerRadius="3dp"
    android:layout_margin="@dimen/padding"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/service_imageView"
            android:src="@drawable/example_pic"
            android:scaleType="centerCrop"
            android:layout_width="130dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:padding="@dimen/padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_textView"
                    android:text="Nusa Dua Indah"
                    android:textSize="18sp"
                    android:textColor="@color/ny_black1"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/rating_textView"
                    android:text="*4.5"
                    android:textSize="14sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/ny_rectangle_gradation_blue"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_half"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:id="@+id/location_textView"
                android:layout_below="@+id/service_name_textView"
                android:text="Dive Center"
                android:textSize="15sp"
                android:textColor="@color/ny_grey4"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.nyelam.android.view.StrikethroughTextView
                android:id="@+id/description_textView"
                android:text="description"
                android:textSize="14sp"
                android:textColor="@color/ny_black1"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
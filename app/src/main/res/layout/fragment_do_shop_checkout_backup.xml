<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clickable="true"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".doshoporder.DoShopCheckoutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:background="@drawable/ny_rectangle_transparant_grey_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    android:text="Billing Address"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="medium"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="St. James Park 200, Newcastle, EN"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="081201010101"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />



                <com.nyelam.android.view.font.NYTextView
                    android:text="Pilih Alamat Lain"
                    android:textSize="14sp"
                    android:textColor="@color/ny_black1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:padding="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </LinearLayout>






            <LinearLayout
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:background="@drawable/ny_rectangle_transparant_grey_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    android:text="Shipping Address"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="John Doe"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="medium"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="St. James Park 200, Newcastle, EN"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="081201010101"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <com.nyelam.android.view.font.NYTextView
                    android:text="Pilih Alamat Lain"
                    android:textSize="14sp"
                    android:textColor="@color/ny_black1"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:padding="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>






            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:background="@drawable/ny_rectangle_transparant_grey_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    android:text="Courier and Service"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_half"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Courier"
                        android:textSize="16sp"
                        android:textColor="@color/ny_black1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <com.nyelam.android.view.font.NYTextView
                        android:text="Type"
                        android:textSize="16sp"
                        android:textColor="@color/ny_black1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <EditText
                    android:hint="Write notes\nex : Extra bubble wrap packaging"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    android:padding="@dimen/padding"
                    android:maxLines="5"
                    android:minLines="5"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>








            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:background="@drawable/ny_rectangle_transparant_grey_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    android:text="Order Details"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <include layout="@layout/view_item_cart"/>

                <View
                    android:layout_marginTop="@dimen/padding"
                    android:layout_marginBottom="@dimen/padding"
                    android:background="@color/ny_grey3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Total Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Rp 1.000.000"
                        android:gravity="right|end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Total Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Rp 1.000.000"
                        android:gravity="right|end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Asuransi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Rp 5.000"
                        android:gravity="right|end"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>





        <LinearLayout
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:orientation="horizontal"
            android:background="@drawable/ny_rectangle_transparant_grey_border"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp" />

            <com.nyelam.android.view.font.NYTextView
                android:text="I have read and agreed to the terms and conditions"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>







            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_triple"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/padding_triple"
                android:background="#FF642E"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Continue"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
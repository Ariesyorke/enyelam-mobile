<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:orientation="vertical"
    tools:context=".doshop.DoShopCheckoutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding">


            <com.nyelam.android.view.font.NYTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:background="#EDEDED"
                android:padding="@dimen/padding"
                android:text="1. Personal Informations"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:fontTextStyle="medium" />



            <LinearLayout
                android:id="@+id/ll_container_input_personal_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:orientation="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Billing Address"
                        android:textColor="@color/ny_black1"
                        android:textSize="18sp"
                        app:fontTextStyle="medium" />
                    <com.nyelam.android.view.font.NYTextView
                        android:id="@+id/tv_choose_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose Address"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:padding="@dimen/padding_half"
                        android:background="@drawable/ny_rectangle_blue_soft"
                        app:fontTextStyle="reguler" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/padding_double"
                    android:background="#EDEDED" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="Full Name*"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="Address*"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="4"
                    android:minLines="4"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="Province"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="States"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="District"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="Zip Code*"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="Phone Number*"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:text="Email Address*"
                    android:textColor="@color/ny_black1"
                    android:textSize="14sp"
                    app:fontTextStyle="reguler" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@drawable/ny_rectangle_transparant_grey_border"
                    android:maxLines="1"
                    android:padding="@dimen/padding_half" />

                <LinearLayout
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding"
                        android:layout_weight="1"
                        android:text="Shipping address same as billing address"
                        android:textSize="14sp"
                        app:fontTextStyle="medium" />

                </LinearLayout>



                <com.nyelam.android.view.font.NYTextView
                    android:id="@+id/tv_next_step_personal_information"
                    app:fontTextStyle="medium"
                    android:text="Next Step"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textAllCaps="true"
                    android:gravity="center"
                    android:padding="@dimen/padding"
                    android:background="@drawable/ny_rectangle_orange"
                    android:layout_marginTop="@dimen/padding_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_container_personal_information"
                android:padding="@dimen/padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_double"
                        android:text="Billing Address"
                        android:textColor="@color/ny_black1"
                        android:textSize="18sp"
                        app:fontTextStyle="medium" />
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:text="John Doe"
                        android:textColor="@color/ny_black1"
                        android:textSize="16sp"
                        app:fontTextStyle="medium" />
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_half"
                        android:text="Jalan Pajajaran No.10 Kota Bogor"
                        android:textColor="@color/ny_black1"
                        android:textSize="14sp"
                        app:fontTextStyle="reguler" />
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_half"
                        android:text="08182878100"
                        android:textColor="@color/ny_black1"
                        android:textSize="14sp"
                        app:fontTextStyle="reguler" />
                </LinearLayout>


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_double"
                        android:text="Shipping Address"
                        android:textColor="@color/ny_black1"
                        android:textSize="18sp"
                        app:fontTextStyle="medium" />
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding"
                        android:text="John Doe"
                        android:textColor="@color/ny_black1"
                        android:textSize="16sp"
                        app:fontTextStyle="medium" />
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_half"
                        android:text="Jalan Pajajaran No.10 Kota Bogor"
                        android:textColor="@color/ny_black1"
                        android:textSize="14sp"
                        app:fontTextStyle="reguler" />
                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/padding_half"
                        android:text="08182878100"
                        android:textColor="@color/ny_black1"
                        android:textSize="14sp"
                        app:fontTextStyle="reguler" />
                </LinearLayout>
            </LinearLayout>




            <com.nyelam.android.view.font.NYTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:background="#EDEDED"
                android:padding="@dimen/padding"
                android:text="2. Shipping"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:fontTextStyle="medium" />

            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    android:text="Courier and Service"
                    android:textColor="@color/ny_black1"
                    app:fontTextStyle="bold"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/padding_half"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.font.NYTextView
                        android:text="Courier"
                        android:textSize="16sp"
                        android:textColor="@color/ny_black1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <com.nyelam.android.view.font.NYTextView
                        android:text="Type"
                        android:textSize="16sp"
                        android:textColor="@color/ny_black1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <EditText
                    android:hint="Write notes\nex : Extra bubble wrap packaging"
                    android:textSize="16sp"
                    android:textColor="@color/ny_black1"
                    android:padding="@dimen/padding"
                    android:maxLines="5"
                    android:minLines="5"
                    android:layout_marginTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>









            <com.nyelam.android.view.font.NYTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:layout_marginBottom="@dimen/padding_double"
                android:background="#EDEDED"
                android:padding="@dimen/padding"
                android:text="3. Payment"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:fontTextStyle="medium" />




            <com.nyelam.android.view.font.NYTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_double"
                android:background="#EDEDED"
                android:padding="@dimen/padding"
                android:text="4. Order Details"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:fontTextStyle="medium" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_margin">

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Details"
                    android:textColor="@color/ny_black1"
                    android:textSize="18sp"
                    app:fontTextStyle="bold" />

                <include layout="@layout/view_item_cart" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@color/ny_grey3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total" />

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|end"
                        android:text="Rp 1.000.000" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@color/ny_grey3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="horizontal">

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shipping Fee" />

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|end"
                        android:text="Rp 18.000" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="@dimen/padding"
                    android:layout_marginTop="@dimen/padding"
                    android:background="@color/ny_grey3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="horizontal">

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Grand Total" />

                    <com.nyelam.android.view.font.NYTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|end"
                        android:text="Rp 1.018.000" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/padding">

                <CheckBox
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center" />

                <com.nyelam.android.view.font.NYTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="I have read and agreed to the terms and conditions" />
            </LinearLayout>


            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_checkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_triple"
                android:layout_marginEnd="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/padding_triple"
                android:background="#FF642E"
                android:gravity="center"
                android:padding="@dimen/activity_horizontal_margin"
                android:text="Continue"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
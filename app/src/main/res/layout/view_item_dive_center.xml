<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="4dp"
    app:cardCornerRadius="3dp"
    android:layout_height="wrap_content"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/featured_imageView"
            android:src="@drawable/logo_nyelam_transparent"
            android:scaleType="centerCrop"
            android:layout_width="130dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_margin="@dimen/padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dive_center_name_textView"
                android:text="Jakarta Dive Center"
                android:textSize="18sp"
                android:textColor="@color/ny_black1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/location_textView"
                android:layout_below="@+id/service_name_textView"
                android:text="Sanur, Bali, Indonesia"
                android:textSize="15sp"
                android:textColor="@color/ny_grey4"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.nyelam.android.view.StrikethroughTextView
                android:id="@+id/price_strikethrough_textView"
                android:text="Rp 125.000"
                android:textSize="14sp"
                android:textColor="@color/ny_black1"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginTop="@dimen/padding_half"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/price_textView"
                    android:text="Rp 100.000"
                    android:textSize="16sp"
                    android:textColor="@color/ny_orange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text=" / person"
                    android:textSize="14sp"
                    android:textColor="@color/ny_black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding_half"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total_dive_textView"
                    android:text="3 dives in 1 days"
                    android:textSize="14dp"
                    android:textColor="@color/ny_black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/StarRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:paddingTop="@dimen/padding_half"
                android:isIndicator="false"
                android:numStars="5"
                android:rating="0"
                android:stepSize="1.0"
                android:layout_gravity="start" />

            <!--<com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="start"
                card_view:srb_gravity="left"
                app:srb_starSize="14dp"
                app:srb_numberOfStars="5"
                app:srb_rating="3"
                app:srb_stepSize="0.5"
                app:srb_borderColor="@color/blue"
                app:srb_fillColor="@color/light_blue" />-->



        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
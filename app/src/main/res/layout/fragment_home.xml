<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.nyelam.android.home.HomeFragment">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/ny_gradient_right_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/padding"
                android:src="@drawable/logo_nyelam_white" />

            <ImageView
                android:id="@+id/menu_item_imageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/padding"
                android:src="@drawable/ic_navigation_drawer" />
        </RelativeLayout>

    </android.support.v7.widget.Toolbar>



    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/toolbar"
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/banner_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:fitsSystemWindows="true">

                <ProgressBar
                    android:id="@+id/banner_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/ny_blue2"
                    android:indeterminateTintMode="src_atop" />

                <com.nyelam.android.view.NYBannerViewPager
                    android:id="@+id/promotion_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_alignBottom="@+id/promotion_view_pager"
                    android:layout_centerHorizontal="true"
                    app:ci_drawable="@drawable/ny_circle_white"
                    app:ci_orientation="horizontal"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/do_dive_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_marginRight="@dimen/padding_half"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/ny_gradient_right_left" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/padding"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_half">

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/ny_circle_white"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_home_menu_do_dive" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/padding_half"
                                android:gravity="center"
                                android:text="@string/do_dive"
                                android:textColor="@color/ny_grey2"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/eco_trip_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_marginLeft="@dimen/padding_half"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/ny_gradient_right_left" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/padding"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_half">

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/ny_circle_white"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_home_menu_ecotrip" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/padding_half"
                                android:gravity="center"
                                android:text="@string/eco_trip"
                                android:textColor="@color/ny_grey2"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/do_shop_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_marginRight="@dimen/padding_half"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/ny_gradient_right_left" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/padding"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_half">

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/ny_circle_white"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_home_menu_do_shop" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/padding_half"
                                android:gravity="center"
                                android:text="@string/do_shop"
                                android:textColor="@color/ny_grey2"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#6fdfdfdf"></RelativeLayout>
                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/do_course_cardView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/padding"
                        android:layout_marginLeft="@dimen/padding_half"
                        android:layout_weight="1"
                        android:elevation="5dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="false">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/ny_gradient_right_left" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/padding"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding_half">

                            <LinearLayout
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:background="@drawable/ny_circle_white"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_home_menu_do_course" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/padding_half"
                                android:gravity="center"
                                android:text="@string/do_course"
                                android:textColor="@color/ny_grey2"
                                android:textSize="16sp"
                                android:textStyle="italic|bold" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#6fdfdfdf"></RelativeLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>


            <!--List Item Horizontalll-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/padding"
                android:paddingLeft="@dimen/padding"
                android:paddingRight="@dimen/padding">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/padding"
                    android:divider="@null"
                    app:reverseLayout="true" />

            </LinearLayout>




        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>




</LinearLayout>

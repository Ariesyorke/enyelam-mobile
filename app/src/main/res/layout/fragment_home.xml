<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.nyelam.android.home.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:background="@color/colorPrimary"
                android:id="@+id/banner_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <ProgressBar
                    android:id="@+id/banner_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/ny_blue2"/>
                <com.nyelam.android.view.NYBannerViewPager
                    android:id="@+id/promotion_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.nyelam.android.view.NYBannerViewPager>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/promotion_view_pager"
                    app:ci_drawable="@drawable/ny_circle_white"
                    app:ci_orientation="horizontal">
                </me.relex.circleindicator.CircleIndicator>
            </RelativeLayout>





            <LinearLayout

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/ny_rectangle_white_border_grey_no_transparant"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_top"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
           android:padding="@dimen/padding"
            android:layout_weight="1">

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_id_ticket"
                android:text="#1"
                android:textColor="@color/ny_orange2"
                android:textSize="12sp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_name"
                android:text="Bali Aqua Dive Center"
                android:textColor="@color/ny_grey8"
                android:textSize="12sp"
                android:gravity="left"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_subject"
                android:text="Banda Neira Dive Trip on November 2018"
                android:textColor="@color/ny_black3"
                android:textSize="14sp"
                android:singleLine="true"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.3"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/tv_date"
                android:text="14/9/2018"
                android:textColor="@color/ny_grey2"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_status"
                android:text="OPEN"
                android:textColor="@color/ny_green1"
                android:layout_gravity="right"
                android:textSize="@dimen/tertiary_text_size"
                android:textStyle="bold"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:id="@+id/layout_notif_chat"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/padding_half"
                android:visibility="gone"
                android:background="@drawable/circle_notif_chat">
                <TextView
                    android:id="@+id/count_read_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
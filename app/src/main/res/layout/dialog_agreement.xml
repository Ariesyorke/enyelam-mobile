<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/padding_double"
    android:background="@drawable/ny_rectangle_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@color/ny_blue7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nyelam.android.view.font.NYTextView
            android:text="Dive Ethics Agreement"
            app:fontTextStyle="mediumItalic"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="@dimen/padding_double"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/close_imageView"
            android:src="@drawable/ic_dialog_close_dark"
            android:padding="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


    <ScrollView
        android:scrollbars="none"
        android:layout_marginTop="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/agreementTextView"
                android:text=""
                android:textColor="@color/ny_black1"
                android:textSize="14sp"
                android:padding="@dimen/padding_double"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:visibility="gone"
                android:text="* On clicking the link below, you will be order the service."
                android:textColor="@color/ny_grey4"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="@dimen/padding"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <com.nyelam.android.view.font.NYTextView
                app:fontTextStyle="italic"
                android:text="Diver Ethics Provided by"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/ny_grey2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/logo_dca"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_width="150dp"
                android:layout_height="150dp" />

        </LinearLayout>
    </ScrollView>


    <View
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/ny_grey1"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/checkBox_linearLayout"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/checkBox"
                android:gravity="center"
                android:layout_marginLeft="@dimen/padding"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:padding="@dimen/padding"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <com.nyelam.android.view.font.NYTextView
                    android:text="I Accept"
                    android:textSize="14sp"
                    android:textColor="@color/ny_grey2"
                    app:fontTextStyle="mediumItalic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <com.nyelam.android.view.font.NYTextView
                    android:text="for being good Diver"
                    android:textSize="12sp"
                    android:textColor="@color/ny_grey2"
                    app:fontTextStyle="mediumItalic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <com.nyelam.android.view.font.NYTextView
            android:id="@+id/accept_textView"
            android:text="Next"
            app:fontTextStyle="bold"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:background="@drawable/ny_rectangle_blue_soft"
            android:padding="@dimen/padding_half"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
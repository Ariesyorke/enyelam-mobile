<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/padding"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Aprilian Nur"
                android:textColor="@color/ny_black1"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/email_textView"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="aprilian.nur.w@gmail.com"
                android:textColor="@color/ny_grey4"
                android:textSize="14sp" />
        </LinearLayout>



        <TextView
            android:visibility="gone"
            android:id="@+id/change_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Change"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            android:textStyle="bold" />


        <LinearLayout
            android:visibility="gone"
            android:id="@+id/fill_linearLayout"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="Isi data"
                android:gravity="center"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:background="@drawable/ny_circle_blue"
                android:layout_marginLeft="@dimen/padding"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
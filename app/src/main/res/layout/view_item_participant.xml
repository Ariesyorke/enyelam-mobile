<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="@drawable/ny_rectangle_grey"
    android:padding="@dimen/padding"
    android:layout_marginBottom="@dimen/padding"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <com.nyelam.android.view.font.NYTextView
            app:fontTextStyle="mediumItalic"
            android:id="@+id/name_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/full_name"
            android:textColor="@color/ny_black1"
            android:textSize="16sp" />
        <com.nyelam.android.view.font.NYTextView
            app:fontTextStyle="mediumItalic"
            android:id="@+id/email_textView"
            android:layout_marginTop="@dimen/padding_half"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"
            android:textColor="@color/ny_grey4"
            android:textSize="14sp" />
    </LinearLayout>



    <TextView
        android:visibility="gone"
        android:id="@+id/change_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/change"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="12sp"
        android:textStyle="bold" />


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/fill_linearLayout"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <TextView
            android:text="@string/change"
            android:textSize="14sp"
            android:textColor="@color/ny_blue7"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:visibility="gone"
            android:background="@drawable/ny_circle_blue"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginStart="@dimen/padding"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

</LinearLayout>
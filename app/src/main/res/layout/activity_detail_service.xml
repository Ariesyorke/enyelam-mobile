                <LinearLayout
                    android:id="@+id/tab_manager"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:background="@color/ny_dark_transparent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:tabGravity="fill"
                    app:tabMode="fixed">

                    <com.nyelam.android.view.NYHomepageDetailTabItemView
                        android:id="@+id/home_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        app:tabChecked="true"
                        app:tabItemPosition="home"
                        app:tabItemText="Detail"
                        app:tabSrcIcon="@drawable/ic_navigation_home_b" />

                    <com.nyelam.android.view.NYHomepageDetailTabItemView
                        android:visibility="visible"
                        android:id="@+id/socialmedia_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:tabItemPosition="socmed"
                        app:tabItemText="Reviews"
                        app:tabSrcIcon="@drawable/ic_navigation_home_a" />

                    <!--<com.nyelam.android.view.NYHomepageDetailTabItemView

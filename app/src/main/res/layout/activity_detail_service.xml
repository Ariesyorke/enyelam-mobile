<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:id="@+id/banner_relativeLayout"
                android:layout_marginBottom="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">
                <ProgressBar
                    android:id="@+id/banner_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:indeterminate="true"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@color/ny_blue2"/>
                <com.nyelam.android.view.NYBannerViewPager
                    android:id="@+id/promotion_view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.nyelam.android.view.NYBannerViewPager>
                <me.relex.circleindicator.CircleIndicator
                    android:id="@+id/circle_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBottom="@+id/promotion_view_pager"
                    app:ci_drawable="@drawable/ny_circle_white"
                    app:ci_orientation="horizontal">
                </me.relex.circleindicator.CircleIndicator>

                <TextView
                    android:text="*5"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/ny_circle_green_blue"
                    android:padding="@dimen/padding_double"
                    android:layout_marginRight="@dimen/padding_half"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>




            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                app:layout_collapseMode="pin">

                <TextView
                    android:id="@+id/name_textView"
                    android:text="Nusa Dua Indah"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.v7.widget.Toolbar>



            <LinearLayout
                android:id="@+id/tab_manager"
                android:layout_gravity="bottom"
                app:tabMode="scrollable"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/ny_grey2"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

                <com.nyelam.android.view.NYHomepageDetailTabItemView
                    android:id="@+id/home_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:tabChecked="true"
                    app:tabItemPosition="home"
                    app:tabItemText="Home"
                    app:tabSrcIcon="@drawable/ic_navigation_home_b"/>

                <com.nyelam.android.view.NYHomepageDetailTabItemView
                    android:id="@+id/socialmedia_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:tabItemPosition="socmed"
                    app:tabItemText="Search"
                    app:tabSrcIcon="@drawable/ic_navigation_home_a"/>

                <com.nyelam.android.view.NYHomepageDetailTabItemView
                    android:id="@+id/transaction_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:tabItemPosition="transaction"
                    app:tabItemText="Transaction"
                    app:tabSrcIcon="@drawable/ic_navigation_home_a"/>

                <com.nyelam.android.view.NYHomepageDetailTabItemView
                    android:id="@+id/my_account_tab"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:tabItemPosition="my_account"
                    app:tabItemText="Profile"
                    app:tabSrcIcon="@drawable/ic_navigation_home_a"/>

            </LinearLayout>


        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <com.nyelam.android.view.NYCustomViewPager
        android:id="@+id/view_pager"
        android:nestedScrollingEnabled="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</android.support.design.widget.CoordinatorLayout>





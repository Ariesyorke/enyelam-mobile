<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nyelam.android.booking.BookingServiceParticipantActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0071BC"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <RelativeLayout
            android:orientation="horizontal"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.nyelam.android.view.font.NYTextView
                app:fontTextStyle="reguler"
                android:id="@+id/title"
                android:text="@string/contact_details"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:id="@+id/search_imageView"
                android:src="@drawable/ic_action_search"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/close_imageView"
                android:src="@drawable/ic_close"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:padding="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



                <TextView
                    android:text="Fullname must match ID Card"
                    android:textColor="@color/ny_black1"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_layout"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/name_contact_editText"
                        android:hint="@string/full_name_hint"
                        android:textSize="16sp"
                        android:textColor="@color/ny_black1"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:imeOptions="actionNext"
                        android:backgroundTint="@color/selecetor_edittext_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>















                <!--<android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    &lt;!&ndash;<Spinner
                        android:id="@+id/country_code_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="@dimen/padding"
                        android:paddingRight="@dimen/padding"
                        android:spinnerMode="dropdown"
                        android:gravity="center_vertical"
                        android:background="@drawable/ny_rectangle_white"
                        android:layout_gravity="center_vertical">
                    </Spinner>&ndash;&gt;

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/phone_number_contact_editText"
                        android:hint="@string/phone_number_hint"
                        android:textSize="16sp"
                        android:textColor="@color/ny_black1"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:backgroundTint="@color/selecetor_edittext_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>-->



                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:id="@+id/spinner_relativeLayout"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/phone_number_layout"
                            android:paddingRight="@dimen/padding"
                            android:layout_alignBottom="@+id/phone_number_layout">
                            <TextView
                                android:id="@+id/plus_textView"
                                android:text="+ 62"
                                android:textSize="16sp"
                                android:textColor="@color/black"
                                android:layout_alignParentBottom="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"/>
                            <RelativeLayout
                                android:layout_toRightOf="@id/plus_textView"
                                android:layout_alignBottom="@id/plus_textView"
                                android:layout_marginLeft="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignTop="@id/plus_textView">
                                <ImageView
                                    android:src="@drawable/ic_down_arrow_black"
                                    android:layout_centerInParent="true"
                                    android:layout_marginBottom="8dp"
                                    android:layout_width="8dp"
                                    android:layout_height="8dp" />
                            </RelativeLayout>

                        </RelativeLayout>

                        <com.nyelam.android.view.NYSpinner
                            android:id="@+id/country_code_spinner"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/padding"
                            android:paddingRight="@dimen/padding"
                            android:spinnerMode="dropdown"
                            android:backgroundTint="@android:color/transparent"
                            android:gravity="bottom|center_horizontal"
                            android:layout_alignTop="@+id/spinner_relativeLayout"
                            android:layout_alignBottom="@+id/spinner_relativeLayout"
                            android:layout_alignRight="@+id/spinner_relativeLayout"
                            android:layout_alignLeft="@+id/spinner_relativeLayout"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="10dp"/>

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/phone_number_layout"
                            android:layout_toRightOf="@id/spinner_relativeLayout"
                            android:layout_alignParentBottom="true"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/phone_number_editText"
                                android:backgroundTint="@color/selecetor_edittext_line"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16sp"
                                android:inputType="phone"
                                android:singleLine="true"
                                android:maxLines="1"
                                android:imeOptions="actionNext"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="@string/phone_number_hint"/>
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>
                </android.support.design.widget.TextInputLayout>



                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/email_contact_editText"
                        android:hint="@string/email_address_hint"
                        android:textSize="16sp"
                        android:textColor="@color/ny_grey2"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textEmailAddress"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:backgroundTint="@color/selecetor_edittext_line"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <com.nyelam.android.view.font.NYTextView
                app:fontTextStyle="medium"
                android:id="@+id/save_contact_textView"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/ny_rectangle_blue_soft"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:layout_margin="@dimen/padding_double"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/service_imageView"
                android:src="@drawable/logo_nyelam"
                android:scaleType="centerCrop"
                android:background="@drawable/ny_circle_blue"
                android:padding="3dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <View
                android:layout_below="@id/service_imageView"
                android:background="@drawable/bg_dotted_line"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="2dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/padding"
            android:layout_marginStart="@dimen/padding"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="@dimen/padding"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/StarRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:paddingTop="@dimen/padding_half"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="1.0"
                    android:layout_gravity="start" />
                <TextView
                    android:text="'@ 22 Aug 2018"
                    android:textSize="14sp"
                    android:textColor="@color/ny_blue2"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:padding="@dimen/padding"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/service_name_textView"
                    android:text="lorem ipsum dolor sit amet."
                    android:textSize="18sp"
                    android:textColor="@color/ny_black1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/location_textView"
                    android:layout_below="@+id/service_name_textView"
                    android:text="lorem ipsum dolor sit amet consectetur adipiscing elit"
                    android:textSize="15sp"
                    android:textColor="@color/ny_grey4"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_marginTop="@dimen/padding_half"
        android:background="@color/ny_grey1"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <com.nyelam.android.view.font.NYTextView
        android:text="@string/coming_soon"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ca1a60ab">

    <ImageView
        android:id="@+id/background_imageView"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_nyelam"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Reset Password"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/ny_rectangle_blue_search_box"
                android:layout_margin="@dimen/padding_double"
                android:paddingLeft="@dimen/padding_triple"
                android:paddingRight="@dimen/padding_triple"
                android:paddingTop="@dimen/padding_double"
                android:paddingBottom="@dimen/padding_double"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:background="@drawable/ny_rectangle_blue_search_box_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/email_editText"
                    android:hint="@string/email_address"
                    android:textSize="14sp"
                    android:textColor="@color/ny_grey1"
                    android:textColorHint="@color/ny_grey1"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:backgroundTint="@android:color/transparent"
                    android:paddingLeft="@dimen/padding_double"
                    android:paddingRight="@dimen/padding"
                    android:paddingTop="@dimen/padding"
                    android:paddingBottom="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>

            <com.nyelam.android.view.font.NYTextView
                app:fontTextStyle="medium"
                android:id="@+id/reset_textView"
                android:text="@string/reset"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:background="@drawable/ny_rectangle_blue_soft"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:layout_marginLeft="@dimen/padding_triple"
                android:layout_marginRight="@dimen/padding_triple"
                android:layout_marginBottom="@dimen/padding_double"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>

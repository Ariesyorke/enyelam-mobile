<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.IntroActivity">
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/indicator_container">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/indicator_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding"
        android:background="@color/ny_grey6"
        android:layout_alignParentBottom="true">
        <com.nyelam.android.view.font.NYTextView
            android:id="@+id/skip_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:fontTextStyle="bold"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:textSize="18sp"
            android:textColor="@color/gray.primary"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Skip"/>
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/circle_indicator"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            app:ci_drawable="@drawable/ny_circle_blue"
            app:ci_drawable_unselected="@drawable/ny_circle_grey"
            app:ci_orientation="horizontal">

        </me.relex.circleindicator.CircleIndicator>
        <com.nyelam.android.view.font.NYTextView
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:fontTextStyle="bold"
            android:paddingTop="@dimen/padding"
            android:paddingBottom="@dimen/padding"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@color/gray.primary"
            android:gravity="right"
            android:layout_gravity="center"
            android:text="NEXT"/>
    </LinearLayout>
</RelativeLayout>
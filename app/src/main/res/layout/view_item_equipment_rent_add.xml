<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/padding_double"
        android:paddingRight="@dimen/padding_double"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/name_textView"
                app:fontTextStyle="medium"
                android:text="BCD Gear 1"
                android:textSize="17sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYStrikethroughTextView
                android:id="@+id/price_strikethrough_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="\@ Rp -"
                android:textColor="@color/ny_grey8"
                android:textSize="16sp"
                android:visibility="gone" />

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/price_textView"
                app:fontTextStyle="light"
                android:text="\@ Rp -"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/stock_textView"
                app:fontTextStyle="light"
                android:text="stock : -"
                android:textColor="@color/ny_black1"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_half">

            <ImageView
                android:id="@+id/minus_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_minus" />

            <TextView
                android:id="@+id/count_textView"
                android:layout_width="55dp"
                android:layout_height="45dp"
                android:layout_marginLeft="@dimen/padding"
                android:layout_marginRight="@dimen/padding"
                android:background="@drawable/ny_rectangle_white_border_grey"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:paddingTop="8dp"
                android:text="0"
                android:textColor="@color/ny_black1"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/plus_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus" />

        </LinearLayout>



    </LinearLayout>


    <View
        android:background="@color/ny_grey3"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


</LinearLayout>
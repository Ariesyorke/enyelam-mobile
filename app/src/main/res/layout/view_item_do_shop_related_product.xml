<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="match_parent"
    card_view:cardElevation="4dp"
    card_view:cardMaxElevation="4dp"
    card_view:cardCornerRadius="@dimen/padding_half"
    android:layout_margin="2dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/image_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.danzoye.lib.view.PersegiAnchorWidthImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/example_pic"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <ProgressBar
                android:id="@+id/loadingView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_holder"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_half"
            android:paddingRight="@dimen/padding_half"
            android:layout_marginBottom="@dimen/activity_vertical_margin">
            <com.nyelam.android.view.font.NYTextView
                card_view:fontTextStyle="reguler"
                android:id="@+id/merchant_name_textView"
                android:text="-"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginLeft="@dimen/padding_half"
                android:textColor="@color/ny_black3"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAllCaps="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.nyelam.android.view.font.NYTextView
                card_view:fontTextStyle="reguler"
                android:id="@+id/item_name_textView"
                android:text="Salvimar One Free Diving"
                android:textSize="14sp"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_marginRight="@dimen/padding_half"
                android:layout_marginLeft="@dimen/padding_half"
                android:textColor="@color/ny_black3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.nyelam.android.view.font.NYStrikethroughTextView
                android:visibility="visible"
                android:id="@+id/price_strikethrough_textView"
                android:text="Rp 1.231.000"
                android:textSize="11sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/ny_black2"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYTextView
                card_view:fontTextStyle="semiBold"
                android:id="@+id/price_textView"
                android:text="Rp 822.300,-"
                android:textSize="14sp"
                android:textColor="@color/ny_orange"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
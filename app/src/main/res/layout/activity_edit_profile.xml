<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nyelam.android.profile.EditProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@drawable/ny_gradient_right_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="Edit Profile"/>

            <!--<ImageView
                android:id="@+id/menu_item_imageView"
                android:src="@drawable/ic_action_menu_item"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_margin="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_double"
                    android:paddingLeft="@dimen/padding"
                    android:paddingRight="@dimen/padding"
                    android:paddingBottom="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/first_name"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/first_name_editText"
                            android:hint="@string/first_name"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:padding="@dimen/padding"
                            android:layout_marginTop="@dimen/padding_half"
                            android:background="@drawable/selector_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/last_name"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/last_name_editText"
                            android:hint="@string/last_name"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:padding="@dimen/padding"
                            android:layout_marginTop="@dimen/padding_half"
                            android:background="@drawable/selector_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/username"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/username_editText"
                            android:hint="@string/username"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:padding="@dimen/padding"
                            android:layout_marginTop="@dimen/padding_half"
                            android:background="@drawable/selector_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/email"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:id="@+id/email_editText"
                            android:hint="@string/email"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:padding="@dimen/padding"
                            android:layout_marginTop="@dimen/padding_half"
                            android:background="@drawable/selector_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/activity_vertical_margin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="@string/phone_number"
                            android:textSize="14sp"
                            android:textColor="@color/ny_black1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:padding="@dimen/padding"
                            android:layout_marginTop="@dimen/padding_half"
                            android:background="@drawable/selector_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Spinner
                                android:id="@+id/country_code_spinner"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown"
                                android:gravity="center"
                                android:background="@drawable/ny_rectangle_white"
                                android:layout_gravity="center">
                            </Spinner>
                            <EditText
                                android:id="@+id/phone_number_editText"
                                android:hint="@string/phone_number"
                                android:textSize="14sp"
                                android:textColor="@color/ny_black1"
                                android:background="@android:color/transparent"
                                android:layout_marginLeft="@dimen/padding"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>


                    <TextView
                        android:id="@+id/update_textView"
                        android:text="Update"
                        android:textColor="@color/colorWhite"
                        android:background="@drawable/ny_rectangle_gradation_blue"
                        android:gravity="center"
                        android:padding="@dimen/padding"
                        android:layout_margin="@dimen/padding_double"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

    <ScrollView
        android:isScrollContainer="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_logo_white"
                android:layout_marginTop="@dimen/padding_triple"
                android:layout_marginBottom="@dimen/padding_triple"
                android:layout_gravity="center"
                android:layout_width="230dp"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/ny_rectangle_blue_search_box"
                android:layout_marginLeft="@dimen/padding_triple"
                android:layout_marginRight="@dimen/padding_triple"
                android:layout_marginTop="@dimen/padding_triple"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:padding="@dimen/padding_triple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">




                <LinearLayout
                    android:background="@drawable/ny_rectangle_blue_search_box_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.nyelam.android.view.NYEditTextWarning
                        android:id="@+id/keyword_textView"
                        android:hint="@string/keyword"
                        android:textSize="14sp"
                        android:textColor="@color/ny_grey1"
                        android:textColorHint="@color/ny_grey1"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/padding"
                        android:paddingTop="@dimen/padding"
                        android:paddingBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>









                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/datetime_linearLayout"
                        android:orientation="horizontal"
                        android:background="@drawable/ny_rectangle_blue_search_box_two"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/datetime_textView"
                            android:text="Date"
                            android:textSize="14sp"
                            android:textColor="@color/ny_grey3"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/padding"
                            android:paddingTop="@dimen/padding"
                            android:paddingBottom="@dimen/padding"
                            android:layout_marginRight="@dimen/padding_half"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:src="@drawable/ic_down_arrow"
                            android:layout_marginRight="@dimen/padding"
                            android:layout_gravity="center"
                            android:layout_width="14dp"
                            android:layout_height="14dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/diver_linearLayout"
                        android:background="@drawable/ny_rectangle_blue_search_box_two"
                        android:layout_marginLeft="@dimen/padding_half"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/diver_textView"
                            android:text="@string/diver"
                            android:textSize="14sp"
                            android:textColor="@color/ny_grey3"
                            android:singleLine="true"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/padding"
                            android:paddingTop="@dimen/padding"
                            android:paddingBottom="@dimen/padding"
                            android:layout_marginRight="@dimen/padding_half"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content" />

                        <Spinner
                            android:visibility="gone"
                            android:id="@+id/diver_spinner"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/activity_horizontal_margin"
                            android:paddingRight="@dimen/padding"
                            android:paddingTop="@dimen/padding"
                            android:paddingBottom="@dimen/padding"
                            android:backgroundTint="@android:color/transparent"
                            android:layout_width="wrap_content"
                            android:layout_weight="2"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:src="@drawable/ic_down_arrow"
                            android:layout_marginRight="@dimen/padding"
                            android:layout_gravity="center"
                            android:layout_width="14dp"
                            android:layout_height="14dp" />

                    </LinearLayout>


                </LinearLayout>







                <LinearLayout
                    android:id="@+id/license_linearLayout"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/padding_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<Switch
                        android:id="@+id/certificate_switch"
                        android:theme="@style/NYSwitchTheme"
                        android:layout_marginRight="@dimen/padding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true" />-->

                    <CheckBox
                        android:id="@+id/certificate_checkBox"
                        style="@style/CheckBoxCustomStyle"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/certificate_textView"
                        android:hint="@string/diving_license"
                        android:textSize="15sp"
                        android:textColor="@color/ny_grey1"
                        android:textColorHint="@color/ny_grey1"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/padding_double"
                        android:paddingRight="@dimen/padding"
                        android:paddingTop="@dimen/padding"
                        android:paddingBottom="@dimen/padding"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!--<LinearLayout
                    android:background="@drawable/ny_rectangle_transparant_white_border"
                    android:padding="@dimen/padding"
                    android:layout_marginTop="@dimen/padding_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/dive_center__editText"
                        android:hint="@string/dive_center"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/ny_grey2"
                        android:background="@drawable/ny_rectangle_white"
                        android:singleLine="true"
                        android:maxLines="1"
                        android:inputType="textPassword"
                        android:paddingLeft="@dimen/padding_double"
                        android:paddingRight="@dimen/padding"
                        android:paddingTop="@dimen/padding"
                        android:paddingBottom="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>-->


            </LinearLayout>

            <TextView
                android:id="@+id/search_textView"
                android:text="@string/dive_now"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/ny_rectangle_blue_soft"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:layout_marginLeft="@dimen/padding_triple"
                android:layout_marginRight="@dimen/padding_triple"
                android:layout_marginBottom="@dimen/padding_triple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />



        </LinearLayout>
    </ScrollView>


</LinearLayout>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nyelam.android.diveservice.DetailServiceFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/padding_triple"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <LinearLayout
                android:id="@+id/main_linearLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/container_layout"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/padding_double"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


                <android.support.v7.widget.CardView
                    android:visibility="gone"
                    android:layout_margin="@dimen/padding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:padding="@dimen/padding"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/subtitle_textView"
                                android:text="&quot;Bali Aqua Dive Center&quot;"
                                android:textColor="@color/ny_blue2"
                                android:textSize="16sp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/label_email"
                                android:layout_below="@+id/subtitle_textView"
                                android:text="Email : "
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/email_textView"
                                android:layout_toRightOf="@+id/label_email"
                                android:layout_below="@+id/subtitle_textView"
                                android:text="aprilian@gmail.com"
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/label_phone_number"
                                android:layout_below="@+id/label_email"
                                android:text="Phone Number : "
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/max_person_textView"
                                android:layout_toRightOf="@+id/label_phone_number"
                                android:layout_below="@+id/label_email"
                                android:text="08568780000"
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/label_city"
                                android:layout_below="@+id/label_phone_number"
                                android:text="City : "
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/city_textView"
                                android:layout_toRightOf="@+id/label_city"
                                android:layout_below="@+id/label_phone_number"
                                android:text="Sanur"
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/label_province"
                                android:layout_below="@+id/label_city"
                                android:text="Province : "
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/province_textView"
                                android:layout_toRightOf="@+id/label_province"
                                android:layout_below="@+id/label_city"
                                android:text="Bali"
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/label_country"
                                android:layout_below="@+id/label_province"
                                android:text="Country : "
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:id="@+id/country_textView"
                                android:layout_toRightOf="@+id/label_country"
                                android:layout_below="@+id/label_province"
                                android:text="Indonesia"
                                android:textColor="@color/ny_black1"
                                android:textSize="14sp"
                                android:layout_marginTop="@dimen/padding"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>













                        <View
                            android:visibility="gone"
                            android:background="@color/ny_grey3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>

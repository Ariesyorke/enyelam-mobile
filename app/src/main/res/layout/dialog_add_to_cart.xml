<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_linearLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/padding_double"
    android:background="@drawable/ny_rectangle_white"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.nyelam.android.view.font.NYTextView
            android:text="Add to Basket"
            app:fontTextStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:padding="@dimen/padding_double"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_item_image"
            android:src="@drawable/logo_nyelam"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <com.nyelam.android.view.font.NYTextView
            android:id="@+id/tv_item_name"
            app:fontTextStyle="bold"
            android:text="Diver Ethics Provided by"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="@color/ny_black2"
            android:padding="@dimen/padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="@dimen/padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.nyelam.android.view.font.NYStrikethroughTextView
                android:id="@+id/tv_price_strikethrough"
                android:text="Rp 25.500"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/ny_black2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.nyelam.android.view.font.NYTextView
                android:id="@+id/tv_price"
                app:fontTextStyle="bold"
                android:text="Rp 18.500"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#FF642E"
                android:layout_marginLeft="@dimen/padding"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/padding_double"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_shop_again"
            android:text="Shop Again"
            android:textColor="@color/colorWhite"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginRight="@dimen/padding_half"
            android:background="#B3B3B3"
            android:padding="@dimen/padding"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <com.nyelam.android.view.font.NYTextView
            android:id="@+id/tv_pay_now"
            android:text="Pay Now"
            android:textColor="@color/colorWhite"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/padding_half"
            android:background="#FF642E"
            android:padding="@dimen/padding"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
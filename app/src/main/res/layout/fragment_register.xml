<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="com.nyelam.android.auth.LoginFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:background="@color/ny_blue5">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorWhite"
                android:background="@android:color/transparent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/app_name"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/padding_double"
            android:paddingRight="@dimen/padding_double"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/email_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textSize="16sp"
                    android:hint="Email *"/>
            </android.support.design.widget.TextInputLayout>





            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="@dimen/padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/spinner_linearLayout"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/phone_number_layout"
                        android:paddingRight="@dimen/padding"
                        android:layout_alignBottom="@+id/phone_number_layout">
                        <TextView
                            android:id="@+id/plus_textView"
                            android:text="+ 62"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"/>
                        <RelativeLayout
                            android:layout_toRightOf="@id/plus_textView"
                            android:layout_alignBottom="@id/plus_textView"
                            android:layout_marginLeft="@dimen/padding"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/plus_textView">
                            <ImageView
                                android:src="@drawable/ic_down_arrow_black"
                                android:layout_centerInParent="true"
                                android:layout_marginBottom="8dp"
                                android:layout_width="8dp"
                                android:layout_height="8dp" />
                        </RelativeLayout>

                    </RelativeLayout>

                    <Spinner
                        android:id="@+id/country_code_spinner"
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/padding"
                        android:paddingRight="@dimen/padding"
                        android:spinnerMode="dropdown"
                        android:backgroundTint="@android:color/transparent"
                        android:gravity="bottom|center_horizontal"
                        android:layout_alignTop="@+id/spinner_linearLayout"
                        android:layout_alignBottom="@+id/spinner_linearLayout"
                        android:layout_alignRight="@+id/spinner_linearLayout"
                        android:layout_alignLeft="@+id/spinner_linearLayout"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="10dp"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/phone_number_layout"
                        android:layout_toRightOf="@id/spinner_linearLayout"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/phone_number_editText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="16sp"
                            android:inputType="phone"
                            android:hint="Phone Number *"/>
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
            </android.support.design.widget.TextInputLayout>






            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/password_editText"
                    android:textSize="16sp"
                    android:hint="Password *"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"/>
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/confirm_password_editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:inputType="textPassword"
                    android:hint="Confirm Password *"/>
            </android.support.design.widget.TextInputLayout>





            <!--<ImageView
                android:src="@drawable/ic_nyelam"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="@dimen/padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Please fill the field to register"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />-->



            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/padding_double"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/ic_lock"
                    android:layout_marginLeft="@dimen/padding"
                    android:layout_marginRight="@dimen/padding"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

                <TextView
                    android:text="Your data will be protected and will not shared"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/register_textView"
                android:text="@string/register"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/ny_rectangle_green"
                android:gravity="center"
                android:padding="@dimen/padding"
                android:layout_marginTop="@dimen/padding_double"
                android:layout_marginBottom="@dimen/padding_double"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Already have an account?"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/login_textView"
                    android:text="Log in"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"
                    android:paddingLeft="@dimen/padding_half"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>

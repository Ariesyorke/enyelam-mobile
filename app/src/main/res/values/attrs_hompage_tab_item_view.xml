<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Declare custom theme attributes that allow changing which styles are
     used for button bars depending on the API level.
     ?android:attr/buttonBarStyle is new as of API 11 so this is
     necessary to support previous API levels. -->
    <declare-styleable name="NYHomepageTabItemView">
        <attr name="tabItemPosition" format="enum">
            <enum name="home" value="0"/>
            <enum name="transaction" value="1"/>
            <enum name="socmed" value="2"/>
            <enum name="my_account" value="3"/>
        </attr>

        <attr name="tabItemText" format="reference|string"/>
        <attr name="tabSrcIcon" format="reference"/>
        <attr name="tabChecked" format="boolean"/>
    </declare-styleable>



    <declare-styleable name="NYTextView">
        <attr name="fontTextStyle" format="enum">
            <enum name="black" value="0"/>
            <enum name="blackItalic" value="1"/>
            <enum name="bold" value="2"/>
            <enum name="boldItalic" value="3"/>
            <enum name="extraBold" value="4"/>
            <enum name="extraBoldItalic" value="5"/>
            <enum name="extraLight" value="6"/>
            <enum name="extraLightItalic" value="7"/>
            <enum name="italic" value="8"/>
            <enum name="light" value="9"/>
            <enum name="lightItalic" value="10"/>
            <enum name="medium" value="11"/>
            <enum name="mediumItalic" value="12"/>
            <enum name="reguler" value="13"/>
            <enum name="semiBold" value="14"/>
            <enum name="semiBoldItalic" value="15"/>
            <enum name="thin" value="16"/>
            <enum name="thinItalic" value="17"/>
        </attr>
    </declare-styleable>



</resources>